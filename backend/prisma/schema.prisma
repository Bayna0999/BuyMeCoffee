generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String
  password String
  Profile Profile?
}

model Profile {
  id    Int     @id @default(autoincrement())
  userId Int     @unique
  user  User    @relation(fields: [userId], references: [id],onDelete: Cascade)
  firstName String
  lastName String
  phoneNumber String
  address String
}
